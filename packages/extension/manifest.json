{
  "manifest_version": 3,
  "name": "RxJS DevTools",
  "version": "1.0.0",
  "description": "Debug and monitor RxJS observables and streams in real-time",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "*://localhost/*",
    "*://localhost.siriusxm.com/*",
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "public/popup.html",
    "default_title": "RxJS DevTools",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "devtools_page": "public/devtools.html"
}

